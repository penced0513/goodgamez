extends layout.pug
include utils.pug
block content
  +validationErrorSummary(errors)
  form(action="/login", method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    +field("Username", "username", username, "text", "Enter Username")
    +field("Password", "password", "", "text", "Enter Password")
    button(type="Submit") Log In