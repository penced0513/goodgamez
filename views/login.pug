extends layout.pug
include utils.pug
block content
  div(id="login-form")
    +validationErrorSummary(errors)
    form(action="/login", method="post")
      input(type="hidden" name="_csrf" value=csrfToken)
      +field("Username: ", "username", username, "text", "Enter Username", true)
      +field("Password: ", "password", "", "password", "Enter Password", true)
      button(class='loginbutton' type="Submit") Log In
    a(href="/signup" class='signupnotif') Don't have an account? Register here!
